{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h2>Wszystkie produkty:</h2>

        <div class="table-responsive">
        <table class="mt-5 table table-hover ">
        <thead>
            <tr>
            <th scope="col">ID</th>
            <th scope="col">Nazwa</th>
            <th scope="col">Ilość</th>
            </tr>
        </thead>
        <tbody>
        {% for product in content %}
            <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.name }}</td>
            <td>{{ product.amount }}</td>
            <td class="d-flex ">
                <div class="pe-3">
                    <a href="/product/{{ product.id }}"><button type="button" class="btn btn-info">Zobacz</button></a>
                </div>
                <div class="pe-3">
                    <a href="/product/edit/{{ product.id }}"><button type="button" class="btn btn-primary">Edytuj</button></a>
                </div>
                <div>
                    <a href="#"><button type="button" class="btn btn-danger">Usuń</button></a>
                </div>
            </td>
            </tr>
        {% endfor %}
        

        </tbody>
        </table>
    </div>
    </div>
{% endblock %}